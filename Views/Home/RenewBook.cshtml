@model MyBook;

@{
    ViewData["Title"] = "Update Profile";
}
<style>
body {
  background-image: url('https://images.wallpaperscraft.com/image/single/books_library_shelves_138556_2560x1440.jpg');
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
}
</style>
<section class="vh-100 gradient-custom">
  <div class="container py-1 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

<form method="post">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Renewal Form</h2>
              <p class="text-white-50 mb-5">Please enter your Book Details</p>
              
              <div class="form-outline form-white ms-4 ">
                <label class="form-label" for="typeEmailX" style="float:left;" >Book ID</label>
                <input name="BookID"  type="number" placeholder="" class="form-control form-control-lg" />                
              </div>

              <div class="form-outline form-white ms-4">
                <label class="form-label" for="typePasswordX" style="float:left;">User ID</label>
                <input name="UserID"  type="text" placeholder="" class="form-control form-control-lg"   required />                
              </div>
               
               <div class="form-outline form-white ms-4">
                <label class="form-label" for="typePasswordX" style="float:left;">Book Name</label>
                <input name="BookName"  type="text" placeholder="" class="form-control form-control-lg"   required />
                
              </div>

              <div class="form-field">
                <p style="color:red">@ViewBag.Message</p>
              </div>                
                                       


              <button class="btn btn-outline-light btn-lg px-5" type="submit">Submit</button>

              @* <div class="d-flex justify-content-center text-center mt-4 pt-1">
                <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
              </div> *@

            </div>
            
</form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
